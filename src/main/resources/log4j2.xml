<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
	<Properties>
		<Property name="log-path">/opt/tasks/logs</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{dd/MMM/yyyy HH:mm:ss,SSS}- %c{1}: %m%n"/>
		</Console>
		<RollingFile name="tasks" fileName="${log-path}/user-management.log"
					 filePattern="${log-path}/user-management-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout>
				<pattern>%d{dd/MMM/yyyy HH:mm:ss,SSS}- %c{1}: %m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
			</Policies>
			<DefaultRolloverStrategy max="100">
                <Delete basePath="${log-path}" maxDepth="1">
                    <IfAll>
                        <IfFileName glob="user-management*"/>
                        <IfLastModified age="5d"/>
                    </IfAll>
                </Delete>
            </DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>
	<Loggers>
		<logger name="com.user.management." level="debug" />
		<Root level="ERROR">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="tasks"/>
		</Root>
	</Loggers>
</Configuration>